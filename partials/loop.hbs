{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

    <article class="post-in-list {{post_class}} scrollme animateme" 
        data-when="enter"
        data-from="0.5"
        data-to="0"
        data-crop="false"
        data-opacity="0.4"
        data-scale="0.7"
    >

        <section class="post-excerpt">
            <a href="{{url}}">
                {{content words="0"}}
            </a>
            <div class="info-mask">
                <div class="mask-wrapper">
                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                    <div class="post-meta">
                        <span class="post-time"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD YYYY"}}</time></span>
                        <span class="post-tags">
                        {{tags prefix="" separator=" "}}
                        </span>
                    </div>
                </div>

            </div>

        </section>

    </article>

{{/foreach}}

{{! Previous/next page links - displayed on every page data-translatex="-200"
        data-rotatez="90"}}
